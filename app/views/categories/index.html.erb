<header>
    <!-- Menu icon (Hamburger menu) -->
    <p class="menu-icon">&#9776;</p>
    
    <!-- Title for the page -->
    <h2>CATEGORIES</h2>
    
    <!-- Search icon using Font Awesome -->
    <i class="fa fa-search"></i>
</header>

<div class="category-list">
  <!-- Loop through each category in @categories -->
  <% @categories.each do |category| %>
    <%= link_to user_category_expenses_path(@user, category), class: "category-link" do %>
      <!-- Category container -->
      <div class="category">
        <!-- Category icon -->
        <div class="category-icon">
          <img src="<%= category.icon %>" alt="<%= category.name %>">
        </div>
        
        <!-- Category name and creation date -->
        <div>
          <p class="name"><%= category.name %></p>
          <p class="expense-date"><%= category.created_at.strftime("%m/%d/%Y") %></p>
        </div>
        
        <!-- Total expense amount for the category -->
        <div class="amount">
          <p><%= number_to_currency(category.expenses.sum(:amount)) %></p>
        </div>
      </div>
    <% end %>
    
    <!-- Link to add a new category -->
    <%= link_to new_user_category_path(@user), class: "add-category-btn" do %>
      <span>Add Category</span>
    <% end %>
  <% end %>
</div>
